<wpml-config>
    <custom-fields>
        <custom-field action="copy">not_salable</custom-field>

        <custom-field action="copy">promotion</custom-field>
        <custom-field action="copy">product</custom-field>
        <custom-field action="copy">model_season</custom-field>
        <custom-field action="copy">model_promotion</custom-field>
        <custom-field action="copy">wm_route_quote_dates</custom-field>
        <custom-field action="copy">departures_periods</custom-field>
        <custom-field action="copy">departure_dates</custom-field>
        <custom-field action="copy">order_departure_date</custom-field>


        <custom-fields-texts>

            <key name="model_season">
                <key name="season_name" />
                <key name="periods">
                    <key name="*"></key>
                </key>
                <key name="product" />
            </key>

            <key name="model_promotion">
                <key name="promotion_name" />
                <key name="promotion_value" />
                <key name="periods">
                    <key name="*"></key>
                </key>
                <key name="departure_dates" >
                    <key name="*"></key>
                </key>
            </key>
            
            
            <key name="departures_periods">
                <key name="*" />
            </key>
            
            <key name="departure_dates">
                <key name="*" />
            </key>
        </custom-fields-texts>

    </custom-fields>
</wpml-config>


